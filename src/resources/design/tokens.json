{
  "unit": "rem",
  "page": { "backgroundColor": "white", "margin": 0, "padding": 0 },
  "colors": [
    { "type": "black", "color": "#000", "shades": [] },
    { "type": "black-muted", "color": "rgba(0,0,0,0.6)", "shades": [] },
    { "type": "white", "color": "#FFF", "shades": [] },
    { "type": "white-muted", "color": "rgba(255,255,255,0.6)", "shades": [] },
    { "type": "apg-blue", "color": "#2F318F", "shades": [20, 30, 40] },
    { "type": "apg-yellow", "color": "#DFAE41", "shades": [20, 30, 40] },
    { "type": "apg-red", "color": "#CE5368", "shades": [20, 30, 40] },
    { "type": "apg-gray", "color": "#D6D5E1", "shades": [20, 30, 40] },
    { "type": "apg-slate", "color": "#F2F0EA", "shades":  [] }
  ],

  "fonts": [
    {
      "type": "main-text-regular",
      "uri": "'../fonts/ChapAPG-400-normal'",
      "sizes": [12, 14, 16, 18, 20]
    },
    {
      "type": "main-text-bold",
      "uri": "'../fonts/ChapAPG-600-normal'",
      "sizes": [12, 14, 16, 18, 20]
    },
    {
      "type": "main-text-link",
      "uri": "'../fonts/ChapAPG-500-normal'",
      "sizes": [12, 14, 16]
    },
    {
      "type": "label-text",
      "uri": "'../fonts/ChapAPG-400-normal'",
      "sizes": [12, 14, 16, 18, 20, 22, 24, 26, 28]
    }
  ],

  "headings": {
    "type": "heading",
    "uri": "'../fonts/ChapAPG-800-normal'",
    "variant": [{ "h1": 42 }, { "h2": 32 }, { "h3": 28 }, { "h4": 26 }, { "h5": 24 }, { "h6": 22 }]
  },

  "spacing": {
    "small": 1,
    "medium": 2,
    "large": 3
  }
}
